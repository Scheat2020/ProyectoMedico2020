    <servlet>
        <servlet-name>InfoPacientesServlet</servlet-name>
        <servlet-class>com.proyectomedicowebapp.servlets.InfoPacientesServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RecetasServlet</servlet-name>
        <servlet-class>com.proyectomedicowebapp.servlets.RecetasServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CitasServlet</servlet-name>
        <servlet-class>com.proyectomedicowebapp.servlets.CitasServlet</servlet-class>
