        <url-pattern>/InfoPacienteServlet.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RecetaServlet</servlet-name>
        <url-pattern>/RecetaServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>InfoPacientesServlet</servlet-name>
        <url-pattern>/InfoPacientesServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RecetasServlet</servlet-name>
        <url-pattern>/RecetasServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CitasServlet</servlet-name>
        <url-pattern>/CitasServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EnvioCitaServlet</servlet-name>
        <url-pattern>/EnvioCitaServlet</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
